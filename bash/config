export PS1="\w$ "
export EDITOR="mate -w"

if [ -f /opt/local/etc/bash_completion ]; then
  . /opt/local/etc/bash_completion
fi

if [ -s ~/.rvm/scripts/rvm ] ; then source ~/.rvm/scripts/rvm ; fi

# MacPorts Installer addition on 2010-02-28_at_14:26:30: adding an appropriate PATH variable for use with MacPorts.
export PATH=/opt/local/bin:/opt/local/sbin:$PATH
# Finished adapting your PATH environment variable for use with MacPorts.
export PATH=~/bin:$PATH


# changing directory to code project
function w { cd ~/Work/$1; }

# function to change directory to the one set in the last opened finder.
function cdf () {
   currFolderPath=$( /usr/bin/osascript <<"         EOT"
       tell application "Finder"
           try
               set currFolder to (folder of the front window as alias)
           on error
               set currFolder to (path to desktop folder as alias)
           end try
           POSIX path of currFolder
       end tell
            EOT
   )
   echo "cd to \"$currFolderPath\""
   cd "$currFolderPath"
}

# Set ls directory colors to cyan (when using a dark terminal background)
export LSCOLORS=gxfxcxdxbxegedabagacad

